<%- include('header.ejs') %>

    <!-- Intro / Welcome Section -->
   - Intro / Welcome Section -->
<section class="intro-section text-center py-5 rounded shadow-sm mx-3">
    <div class="container">
        <h2 class="fw-bold">Start Learning üöÄ</h2>
        <p class="lead">Select your class, subject, and chapter to begin learning.</p>
    </div>
</section>

<div class="container my-5">

    <!-- Step 1: Class Selection -->
    <section id="classSection">
        <h3 class="mb-4">Select Your Class</h3>
        <div class="row g-4">
            <% const classes=["6th", "7th" , "8th" , "9th" ]; %>
                <% classes.forEach(cls=> { %>
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 text-center shadow-sm cursor-pointer"
                            onclick="selectClass('<%= cls %>')">
                            <div class="card-body">
                                <div class="display-4">üè´</div>
                                <h5 class="card-title mt-3">
                                    <%= cls %> Class
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
        </div>
    </section>

    <!-- Step 2: Subject Selection -->
    <section id="subjectSection" style="display:none;">
        <button class="btn btn-outline-primary mb-4" onclick="goBackToClass()">‚¨Ö Back to Class</button>
        <h3 class="mb-4">Select Your Subject</h3>
        <div class="row g-4">
            <% const subjects=["Mathematics", "Science" , "Physics" , "Chemistry" , "Computer Science" , "English"
                , "Exams & Quizzes" ]; %>
                <% subjects.forEach(sub=> { %>
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 text-center shadow-sm cursor-pointer"
                            onclick="selectSubject('<%= sub %>')">
                            <div class="card-body">
                                <div class="display-4">üìò</div>
                                <h5 class="card-title mt-3">
                                    <%= sub %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
        </div>
    </section>

    <!-- Step 3: Chapter Selection -->
    <section id="chapterSection" style="display:none;">
        <button class="btn btn-outline-primary mb-4" onclick="goBackToSubject()">‚¨Ö Back to Subject</button>
        <h3 class="mb-4">Select Chapter</h3>
        <div class="row g-4">
            <% const chapters=["Chapter 1", "Chapter 2" , "Chapter 3" , "Chapter 4" ]; %>
                <% chapters.forEach(ch=> { %>
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 text-center shadow-sm cursor-pointer"
                            onclick="selectChapter('<%= ch %>')">
                            <div class="card-body">
                                <div class="display-4">üìö</div>
                                <h5 class="card-title mt-3">
                                    <%= ch %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
        </div>
    </section>

    <!-- Step 4: Activity Selection -->
    <section id="activitySection" style="display:none;">
        <button class="btn btn-outline-primary mb-4" onclick="goBackToChapter()">‚¨Ö Back to Chapter</button>
        <h3 class="mb-4">Choose Activity</h3>
        <div class="row g-4">
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center shadow-sm cursor-pointer" onclick="alert('Quiz selected!')">
                    <div class="card-body">
                        <div class="display-4">üìù</div>
                        <h5 class="card-title mt-3">Quiz</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center shadow-sm cursor-pointer" onclick="alert('Notes selected!')">
                    <div class="card-body">
                        <div class="display-4">üìñ</div>
                        <h5 class="card-title mt-3">Notes</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 text-center shadow-sm cursor-pointer" onclick="alert('Game selected!')">
                    <div class="card-body">
                        <div class="display-4">üéÆ</div>
                        <h5 class="card-title mt-3">Game</h5>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<script>
    let selectedClass = null;
    let selectedSubject = null;
    let selectedChapter = null;

    function selectClass(cls) {
        selectedClass = cls;
        document.getElementById('classSection').style.display = 'none';
        document.getElementById('subjectSection').style.display = 'block';
    }

    function goBackToClass() {
        document.getElementById('subjectSection').style.display = 'none';
        document.getElementById('classSection').style.display = 'block';
    }

    function selectSubject(sub) {
        selectedSubject = sub;
        document.getElementById('subjectSection').style.display = 'none';
        document.getElementById('chapterSection').style.display = 'block';
    }

    function goBackToSubject() {
        document.getElementById('chapterSection').style.display = 'none';
        document.getElementById('subjectSection').style.display = 'block';
    }

    function selectChapter(ch) {
        selectedChapter = ch;
        document.getElementById('chapterSection').style.display = 'none';
        document.getElementById('activitySection').style.display = 'block';
    }

    function goBackToChapter() {
        document.getElementById('activitySection').style.display = 'none';
        document.getElementById('chapterSection').style.display = 'block';
    }
</script>

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

