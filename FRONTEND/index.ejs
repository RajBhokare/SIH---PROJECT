    <script>
        function handleFeatureClick(courseName) {
            const loggedInUser = JSON.parse(localStorage.getItem("loggedInUser"));
            if (!loggedInUser) {
                alert(`Please login or sign up to access ${courseName}`);
                window.location.href = "/login";
            } else {
                alert(`Welcome to ${courseName}! (Feature content coming soon)`);
            }
        }
    </script>

